<pretty-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

  <url-mapping id="index">
    <pattern value="/"/>
    <view-id value="/index.xhtml"/>
  </url-mapping>

  <url-mapping id="login-patient">
    <pattern value="/login/patient"/>
    <view-id value="/login.xhtml"/>
  </url-mapping>
  <url-mapping id="login-doctor">
    <pattern value="/login/doctor"/>
    <view-id value="/login-doctor.xhtml"/>
  </url-mapping>

  <url-mapping id="reset">
    <pattern value="/recovery/reset"/>
    <view-id value="/password-reset.xhtml"/>
  </url-mapping>

  <url-mapping id="forgot">
    <pattern value="/recovery/forgot"/>
    <view-id value="/forgot.xhtml"/>
  </url-mapping>

  <url-mapping id="view">
    <pattern value="/view"/>
    <view-id value="/view/dashboard.xhtml"/>
  </url-mapping>

  <url-mapping id="take-appointment">
    <pattern value="/view/take-appointment"/>
    <view-id value="/view/take-appointment.xhtml"/>
  </url-mapping>

  <url-mapping id="appointments">
    <pattern value="/view/appointments"/>
    <view-id value="/view/appointments.xhtml"/>
  </url-mapping>

  <url-mapping id="profile">
    <pattern value="/view/profile"/>
    <view-id value="/view/profile.xhtml"/>
  </url-mapping>

  <url-mapping id="vaccine">
    <pattern value="/view/vaccine"/>
    <view-id value="/view/vaccine.xhtml"/>
  </url-mapping>

  <url-mapping id="alergy">
    <pattern value="/view/alergy"/>
    <view-id value="/view/alergy.xhtml"/>
  </url-mapping>

  <url-mapping id="disease">
    <pattern value="/view/disease"/>
    <view-id value="/view/disease.xhtml"/>
  </url-mapping>

  <url-mapping id="assay">
    <pattern value="/view/assay"/>
    <view-id value="/view/assay.xhtml"/>
  </url-mapping>

</pretty-config>