<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

  <persistence-unit name="Hibernate_JPA" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.hastanerandevu.model.PatientModel</class>
    <class>com.hastanerandevu.model.CityModel</class>
    <class>com.hastanerandevu.model.DistrictModel</class>
    <class>com.hastanerandevu.model.HospitalModel</class>
    <class>com.hastanerandevu.model.BranchModel</class>
    <class>com.hastanerandevu.model.SecretQuestionModel</class>
    <class>com.hastanerandevu.model.DoctorModel</class>
    <class>com.hastanerandevu.model.PatientModel</class>
    <class>com.hastanerandevu.model.AlergyModel</class>
    <class>com.hastanerandevu.model.DiseaseModel</class>
    <class>com.hastanerandevu.model.TreatmentModel</class>
    <class>com.hastanerandevu.model.AssayModel</class>

    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@//localhost:1521/orcl"/>
      <property name="javax.persistence.jdbc.user" value="hospital"/>
      <property name="javax.persistence.jdbc.password" value="hospital123"/>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>

      <!--<property name="hibernate.hbm2ddl.auto" value="create-drop"/>-->
    </properties>

  </persistence-unit>
</persistence>